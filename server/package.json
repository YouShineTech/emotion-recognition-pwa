{
  "name": "emotion-recognition-pwa-server",
  "version": "1.0.0",
  "description": "Server-side emotion processing backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "dev:debug": "nodemon --exec node --inspect-brk -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "build:prod": "tsc --build --verbose",
    "build:watch": "tsc --watch",
    "build:analyze": "npm run build && node scripts/analyze-bundle.js",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:integration": "jest --config jest.integration.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .nyc_output logs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "mediasoup": "^3.15.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "emotion-recognition",
    "mediasoup",
    "webrtc",
    "ai",
    "opencv"
  ],
  "author": "Emotion Recognition Team",
  "license": "MIT"
}
