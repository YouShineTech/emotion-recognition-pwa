{
  "name": "pwa-shell-poc",
  "version": "1.0.0",
  "description": "POC for PWA Shell Module - Progressive Web App shell with service worker and offline capabilities",
  "main": "dist/poc.js",
  "scripts": {
    "build": "tsc",
    "poc": "npm run build && node dist/poc.js",
    "debug": "npm run build && node --inspect-brk dist/poc.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "uuid": "^9.0.1",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "@types/uuid": "^9.0.4",
    "@types/jsdom": "^21.1.3",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/poc.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
