# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3001

# Client Configuration
REACT_APP_API_URL=https://emotion-pwa.com
REACT_APP_WS_URL=wss://emotion-pwa.com

# Database
REDIS_URL=redis://redis-cluster:6379

# Mediasoup Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=auto-detect
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:turn.emotion-pwa.com:3478
TURN_SERVER_USERNAME=production-turn-user
TURN_SERVER_CREDENTIAL=production-turn-password

# OpenFace Configuration
OPENFACE_PATH=/usr/local/bin/OpenFace
OPENFACE_MODEL_PATH=/usr/local/share/OpenFace/model

# Audio AI Configuration
PYTHON_PATH=/usr/bin/python3
AUDIO_MODEL_PATH=/app/models/audio_emotion_model.h5

# Logging
LOG_LEVEL=warn
LOG_FILE_PATH=/app/logs/app.log

# Security
JWT_SECRET=production-jwt-secret-change-immediately
CORS_ORIGIN=https://emotion-pwa.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
